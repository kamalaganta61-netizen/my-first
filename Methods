# method in python is a function that belongs to a class.
# it is used to define the behavior or actions of an object.
# EXAMPLE : SIMPLE METHOD

class student:
    def __init__(self, name, marks):
        self.name = name
        self.marks = marks

    # method
    def display(self):
        print("student name:", self.name)
        print("marks:", self.marks)

# create object
s1 = student("kamala",95)
s1.display()



# there are three typpes of methods :those are
# 1. instance method
# 2. class method
# 3. static method

class Demo:
    company = "TechCorp"

    def __init__(self, name):
        self.name = name

    # Instance method
    def show(self):
        print("Name:", self.name)

    # Class method
    @classmethod
    def info(cls):
        print("Company:", cls.company)

    # Static method
    @staticmethod
    def greet():
        print("Welcome to TechCorp!")

# Using methods
d = Demo("Kamala")
d.show()
Demo.info()
Demo.greet()
